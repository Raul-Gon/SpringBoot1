	public String m1() {
		return "saludo";
	}
	
	@GetMapping({"/saludar/2", "/saludar/dos", "saludar/tarde"})
	public String m2() {
		return "saludo";
	}
	
	@GetMapping({"/saludar/3", "/saludar/tres", "saludar/noche"})
	public String m3() {
		return "saludo";
	}
}
